# shell alias
alias bs="source ~/.bashrc"

# tmux aliasses
alias tn="tmux new -s"
alias ta="tmux attach -t"
alias tl="tmux list-sessions"
alias tk="tmux kill-session -t"

# windows aliasses
alias notes="/mnt/c/Users/bram/AppData/Local/Programs/Mark\ Text/Mark\ Text.exe /home/bram/notes"

# git commands
alias gg="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all"
alias ggs="git log --graph --oneline --abbrev-commit --decorate"

# script aliasses
alias venva=". $HOME/Projects/scripts/poetry_activator.sh" #note that this needs run in the shell itself and not as a subprocess thus leading to . ./
